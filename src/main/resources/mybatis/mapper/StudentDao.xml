<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.dao.StudentDao">
    <resultMap id="BaseStudent" type="com.school.bean.po.Student">
        <id column="sid" property="sid"/>
        <result column="student_name" property="studentName"/>
        <result column="class_name" property="className"/>
        <result column="grade_name" property="gradeName"/>
        <result column="student_code" property="studentCode" />
    </resultMap>


    <select id="listStudent" resultMap="BaseStudent" parameterType="string">
        select * from student
        <where>
            <if test="student_name!=null">student_name=#{student_name}</if>
        </where>
    </select>




</mapper>
